<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <TextView
            android:id="@+id/judul_news1"
            android:layout_width="284dp"
            android:layout_height="30dp"
            android:layout_marginStart=".11in"
            android:layout_marginTop="2dp"
            android:text="Layout Bangku Wisuda 2022"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="352dp"
            android:layout_height="15dp"
            android:layout_marginStart=".1in"
            android:layout_marginTop="26dp"
            android:backgroundTint="#E9E9E9"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tgl_news1"
            android:layout_width=".6in"
            android:layout_height=".15in"
            android:layout_marginStart=".11in"
            android:layout_marginTop="45dp"
            android:text="30-11-2022"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_selengkapnya_news1"
            android:layout_width="149dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#E9E9E9"
            android:gravity="center"
            android:text="Selengkapnya >"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>