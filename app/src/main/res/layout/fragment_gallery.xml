<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".ui.News.GalleryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/judul_news1"
                    android:layout_width="284dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft=".11in"
                    android:layout_marginTop="2dp"
                    android:text="Layout Bangku Wisuda 2022"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"></TextView>

                <Button
                    android:layout_width="352dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft=".1in"
                    android:layout_marginTop="26dp"
                    android:backgroundTint="#E9E9E9"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold"></Button>

                <TextView
                    android:id="@+id/tgl_news1"
                    android:layout_width=".6in"
                    android:layout_height=".15in"
                    android:layout_marginLeft=".11in"
                    android:layout_marginTop="45dp"
                    android:text="30-11-2022"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <Button
                    android:id="@+id/btn_selengkapnya_news1"
                    android:layout_width="149dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#E9E9E9"
                    android:gravity="center"
                    android:text="Selengkapnya >"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/judul_news2"
                    android:layout_width="284dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft=".11in"
                    android:layout_marginTop="2dp"
                    android:text="Pengumuman Yudisium 2022"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"></TextView>

                <Button
                    android:layout_width="352dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft=".1in"
                    android:layout_marginTop="26dp"
                    android:backgroundTint="#E9E9E9"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold"></Button>

                <TextView
                    android:id="@+id/tgl_news2"
                    android:layout_width=".6in"
                    android:layout_height=".15in"
                    android:layout_marginLeft=".11in"
                    android:layout_marginTop="45dp"
                    android:text="09-11-2022"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <Button
                    android:id="@+id/btn_selengkapnya_news2"
                    android:layout_width="149dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#E9E9E9"
                    android:gravity="center"
                    android:text="Selengkapnya >"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/judul_news3"
                    android:layout_width="340dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft=".11in"
                    android:layout_marginTop="2dp"
                    android:text="Kalender Akademik Politeknik STMI 2022"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"></TextView>

                <Button
                    android:layout_width="352dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft=".1in"
                    android:layout_marginTop="26dp"
                    android:backgroundTint="#E9E9E9"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold"></Button>

                <TextView
                    android:id="@+id/tgl_news3"
                    android:layout_width=".6in"
                    android:layout_height=".15in"
                    android:layout_marginLeft=".11in"
                    android:layout_marginTop="45dp"
                    android:text="25-09-2022"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <Button
                    android:id="@+id/btn_selengkapnya_news3"
                    android:layout_width="149dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#E9E9E9"
                    android:gravity="center"
                    android:text="Selengkapnya >"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </androidx.cardview.widget.CardView>







        </LinearLayout>




    </ScrollView>



</FrameLayout>